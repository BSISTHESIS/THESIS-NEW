<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/card_view_next_fragment"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">





        <TextView
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER NO:"/>
        <TextView
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/name_order"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME CUSTOMER::"/>


        <TextView
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_level"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER LEVEL:"/>
        <TextView
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_status"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER STATUS:"/>




        <LinearLayout

            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:layout_below="@id/order_status"
            android:id="@+id/btn_linear2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                android:background="@drawable/background_card_view"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/coffe_font"
                android:id="@+id/btn_cancel_order"
                android:layout_marginTop="30dp"
                android:layout_below="@id/order_status"
                android:layout_toEndOf="@id/name_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPRINT RECEIPT ORDER"/>

            <Button
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:id="@+id/btn_change"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_status"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="120dp"
                android:layout_toEndOf="@id/btn_cancel_order"
                android:background="@drawable/background_card_view"
                android:fontFamily="@font/coffe_font"
                android:text="PAYMENT "
                android:textAlignment="center" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
