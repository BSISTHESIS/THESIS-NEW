<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp"
        android:id="@+id/card_view_next_fragment"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/image_view"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:src="@drawable/logos" />

        <Button
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/choose"
            android:id="@+id/btn_edit_status"
            android:layout_marginTop="30dp"
            android:layout_below="@id/product_status"
            android:layout_toEndOf="@id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE \n STATUS"/>

        <Button
            android:visibility="gone"
            android:fontFamily="@font/choose"
            android:id="@+id/btn_delete"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/product_status"
            android:layout_toEndOf="@id/btn_edit_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE \n ITEM"/>


        <TextView
            android:padding="10dp"
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/background_card_view"
            android:fontFamily="@font/coffe_font"
            android:text="PRODUCT PRICE:"
            android:textAlignment="viewEnd"
            android:textColor="@color/black_overlay"
            android:textSize="12sp" />

        <TextView
            android:padding="10dp"
            android:textSize="14sp"
        android:background="@drawable/background_card_view"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCT NAME:"/>


        <TextView
            android:padding="10dp"
            android:textSize="12sp"
            android:includeFontPadding="true"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_card_view"
            android:textAlignment="textEnd"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/product_status"
            android:layout_marginTop="10dp"
            android:layout_below="@id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCT PRICE:"/>

    </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>
