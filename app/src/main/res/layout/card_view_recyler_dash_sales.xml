<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/card_view_next_fragment"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/liness"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------------------------------------------------"/>


        <TextView
            android:layout_below="@id/liness"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER DATE :"/>


        <TextView
            android:layout_below="@id/order_date"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER NO:"/>
        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/name_order"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME CUSTOMER::"/>


        <TextView
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_level"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER LEVEL:"/>
        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/order_status"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER STATUS:"/>

        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/lines"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------------------------------------------------"/>



        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/payment_order"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT : "/>

        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/money"
            android:layout_marginTop="10dp"
            android:layout_below="@id/payment_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONEY : "/>


        <TextView
            android:layout_marginStart="10dp"
            android:fontFamily="@font/coffe_font"
            android:textColor="@color/black_overlay"
            android:id="@+id/change"
            android:layout_marginTop="10dp"
            android:layout_below="@id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONEY : "/>
        <LinearLayout

            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_below="@id/order_status"
            android:id="@+id/btn_linear2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">
            <Button
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/choose"
                android:id="@+id/btn_cancel_order"
                android:layout_marginTop="30dp"
                android:layout_below="@id/order_status"
                android:layout_toEndOf="@id/name_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPRINT RECEIPT ORDER"/>



        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
