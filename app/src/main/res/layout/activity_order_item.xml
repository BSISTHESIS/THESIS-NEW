<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ORDERSTATUS.OrderItem">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:foregroundGravity="center"
        android:id="@+id/image_order"
        android:layout_width="match_parent"
        android:layout_height="300px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/baseline_arrow_back_24" />

    <RelativeLayout
        android:id="@+id/order_name"
        android:background="@drawable/border_new2"
        android:layout_below="@id/image_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name"
            android:layout_margin="20dp"
            android:text="NAME OF COFFE OR ORDER "
            android:fontFamily="@font/coffe_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/coffe_font"
            android:gravity="end"
            android:text="200.00" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/list_"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD ONS:"
                android:id="@+id/add_ons_Text"/>
<!--        <ListView-->
<!--            android:choiceMode="multipleChoice"-->
<!--            android:background="@color/white"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/RecylerHistory"/>-->

            <CheckBox
                android:layout_below="@id/add_ons_Text"
                android:id="@+id/checkbox_nata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_new"
                android:checked="false"
                android:text="NATA"
                android:textColor="@color/white" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/price_add1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/coffe_font"
                android:gravity="end"
                android:text="200.00" />

            <CheckBox
                android:textColor="@color/white"
                android:background="@drawable/border_new"
                android:layout_below="@id/checkbox_nata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OREO"
                android:id="@+id/checkbox_oreo"/>
            <TextView
                android:textColor="@color/white"
                android:layout_below="@id/checkbox_nata"
                android:id="@+id/price_add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/coffe_font"
                android:gravity="end"
                android:text="200.00" />
            <CheckBox
                android:textColor="@color/white"
                android:background="@drawable/border_new"
                android:layout_below="@id/checkbox_oreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYRUP"
                android:id="@+id/checkbox_syrup"/>
            <TextView
                android:textColor="@color/white"
                android:layout_below="@id/checkbox_oreo"
                android:id="@+id/price_add3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/coffe_font"
                android:gravity="end"
                android:text="200.00" />
            <CheckBox
                android:textColor="@color/white"
                android:background="@drawable/border_new"
                android:layout_below="@id/checkbox_syrup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POPPING BOOBA"
                android:id="@+id/checkbox_poppingboba"/>
            <TextView
                android:textColor="@color/white"
                android:layout_below="@id/checkbox_syrup"
                android:id="@+id/price_add4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/coffe_font"
                android:gravity="end"
                android:text="200.00" />

            <CheckBox
                android:textColor="@color/white"
                android:background="@drawable/border_new"
                android:layout_below="@id/checkbox_poppingboba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHIPPED  CREAM "
                android:id="@+id/checkbox_whippedcream"/>
            <TextView
                android:textColor="@color/white"
                android:layout_below="@id/checkbox_poppingboba"
                android:id="@+id/price_add5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/coffe_font"
                android:gravity="end"
                android:text="200.00" />


            <CheckBox
                android:textColor="@color/white"
                android:background="@drawable/border_new"
                android:layout_below="@id/checkbox_whippedcream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ESPRESSO SHOT"
                android:id="@+id/checkbox_espesso"/>
            <TextView
                android:textColor="@color/white"
                android:layout_below="@id/checkbox_whippedcream"
                android:id="@+id/price_add6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/coffe_font"
                android:gravity="end"
                android:text="200.00" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_2"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@id/list_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SUGAR PERCENTAGE :"
                android:id="@+id/sugar_percentage_text"/>


            <RadioGroup
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="0%"/>

                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="10%"/>
                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="25%"/>
                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="30%"/>

                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="50%"/>


                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="75%"/>


                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radio7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="100%"/>

            </RadioGroup>


        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/border_new2"
            android:layout_below="@id/list_2"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:background="@drawable/round_remove_circle_outline_24"
                    android:onClick="decreaseInteger"
                    android:id="@+id/btn_minus_item"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                 />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:text="1"
                    android:textColor="@color/black_overlay"
                    android:layout_toEndOf="@id/btn_minus_item"
                    android:id="@+id/value_"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <Button
                    android:id="@+id/btn_add_item"
                    android:background="@drawable/round_add_circle_outline_24"
                    android:onClick="increaseInteger"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/value_" />



                <Button
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:gravity="end"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:text="ADD TO CART"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@id/btn_add_item"
                    android:id="@+id/btn_addcard_"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>